<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMessageActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="10sp"
        android:text="Please Select your semester and view type"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:typeface="normal" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/choose_sem"
        android:prompt="@string/semester_prompt" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:entries="@array/choose_view"
        android:prompt="@string/viewingright" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:onClick="sendtonextactivity"
        android:text="submit" />
</LinearLayout>